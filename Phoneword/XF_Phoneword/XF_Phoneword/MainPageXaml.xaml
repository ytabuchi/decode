<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_Phoneword.MainPageXaml"
             Title="Phoneword"
             Padding="15">
  <ContentPage.Content>
    <StackLayout Spacing="5">
      <Label Text="Enter a Phoneword:" FontSize="24"/>
      <Entry x:Name="PhoneNumberText" Text="1-855-Xamarin" HorizontalOptions="FillAndExpand" />
      <Button x:Name="translateButton" Text="Translate" HorizontalOptions="FillAndExpand" />
      <Button x:Name="callButton" Text="Call" HorizontalOptions="FillAndExpand" />
      <Button x:Name="callHistoryButton" Text="Call History" IsEnabled="false" HorizontalOptions="FillAndExpand" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>