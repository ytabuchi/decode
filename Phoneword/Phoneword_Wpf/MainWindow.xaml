<Window x:Class="Phoneword_Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Phoneword_Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <Grid>
        <TextBox x:Name="phoneNumberText" Margin="10,55,10,10" TextWrapping="Wrap" Text="1-855-Xamarin" VerticalAlignment="Top" FontSize="24" ToolTip=""/>
        <Label x:Name="label" Content="Enter a phoneword:" VerticalAlignment="Top" FontSize="24" Margin="10"/>
        <Button x:Name="translateButton" Content="Translate" Margin="10,100,10,0" VerticalAlignment="Top" FontSize="24" Click="translateButton_Click"/>
        <Button x:Name="callButton" Content="Call" Margin="10,140,10,0" VerticalAlignment="Top" FontSize="24" Click="callButton_Click" IsEnabled="False"/>
        <Button x:Name="callHistoryButton" Content="Call History" Margin="10,180,10,0" VerticalAlignment="Top" FontSize="24" Click="callHistoryButton_Click" IsEnabled="False"/>

    </Grid>
</Window>
